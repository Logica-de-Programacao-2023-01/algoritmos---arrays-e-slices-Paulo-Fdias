package main

import "fmt"

func contains(slice []int, num int) bool {
    for _, n := range slice {
        if n == num {
            return true
        }
    }
    return false
}

func main() {
    slice := make([]int, 0, 5)

    var num int
    fmt.Print("Informe um n√∫mero inteiro: ")
    fmt.Scan(&num)

    if !contains(slice, num) {
        slice = append(slice, num)
    }

    fmt.Println("Slice resultante:", slice)
}
