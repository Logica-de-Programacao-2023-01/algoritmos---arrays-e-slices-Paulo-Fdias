package main

import "fmt"

func main() {
	// Criação do array
	array := [7]int{1, 2, 3, 4, 5, 6, 7}

	// Solicitação de número ao usuário
	var numero int
	fmt.Print("Informe um número: ")
	fmt.Scanln(&numero)

	// Adiciona o número ao primeiro e último elemento do array
	array[0] += numero
	array[len(array)-1] += numero

	// Impressão do array resultante
	fmt.Println("Array resultante:", array)
}
